{% extends 'base.html.twig' %}

{% block main %}

<div
    class="container mb-5" 
>
    <div class="card mt-5">
        <div class="card-header">Liste des Clients</div>
        <div class="card-body p-3">
        <div class="row my-2 d-flex justify-content-end">
        <a href="{{path("client.create")}}"
                                type="button"
                                class="btn btn-outline-dark col-1"
                            >
                                Create
                            </a>

                        
        </div>
        <div class="mb-5 col-8" >
        {{form_start(searchClientform,{'attr':{'class':'d-flex justify-content-around'} })}}    
              {{form_row(searchClientform.telephone)}}      
               {{form_row(searchClientform.surname,{'attr':{'class':'mr-2'}})}} 
                {{form_row(searchClientform.statut)}}       
          {{form_end(searchClientform)}}
        
        </div>
        
            <div
                class="table-responsive"
            >
                <table
                    class="table table-light table-bordered table-striped"
                >
                    <thead>
                        <tr>
                            <th scope="col">Nom et Prenom</th>
                            <th scope="col">Telephone</th>
                            <th scope="col">Surname</th>
                            <th scope="col">Adresse</th>
                            <th scope="col">Actions</th>
    
                        </tr>
                    </thead>
                    <tbody>
                    {% for client in dataClients %}
                        <tr class="">
                                    {% if client.user is not null %}
                                    <td scope="row">{{client.user.nom ~ " " ~ client.user.prenom }}</td>
                                    {% else %}
                                        <td scope="row">-</td>
                                    {% endif %}
                                    
                                    <td scope="row">{{client.telephone}}</td>
                                    <td>{{client.surname}}</td>
                                    <td>{{client.adresse}}</td>
                                    <td><a
                                        href="{{path("dette.index",{idClient:client.id})}}"
                                        type="button"
                                        class="btn btn-outline-dark"
                                    >
                                        Dettes
                                    </a>
                                    </td>
                        </tr>
                    {% else %}
                        Pas de clients
                    {% endfor %}
                       
                       
                    </tbody>
                </table>
                <nav aria-label="Page navigation" class="mt-2">
                    <ul
                        class="pagination float-end    "
                    >
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item active" aria-current="page">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                
            </div>
            
        </div>
    </div>
    
   
    
</div>

{% endblock %}


